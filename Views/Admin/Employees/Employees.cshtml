

<h1>Employee list : </h1>

<a asp-action="CreateEmployee">Create Employee</a>

<table class=" table">

    <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Email</th>
        <th>Age</th>
    </tr>

    @foreach (Employee employee in ViewBag.Employees)
    {
    <tr>
        <th>@employee.User.FirstName</th>
        <th>@employee.User.LastName</th>
        <th>@employee.User.Email</th>
        <th>@employee.Age</th>

        <th><a asp-action="ChangeEmployee" asp-controller="Admin" asp-route-id="@employee.EmployeeId">Change</a></th>
    </tr>
    }
</table>>


