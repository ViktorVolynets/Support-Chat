@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using Microsoft.AspNetCore.Mvc.Localization;

@model TechnicalSupport.Utils.JoinAdminModel

@inject IViewLocalizer Localizer


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}



<form asp-action="CreateAdmin" asp-controller="Admin" asp-antiforgery="true">

    <div class="validation" asp-validation-summary="ModelOnly"></div>

    <div>

        <div class="form-group>

            <label asp-for="FirstName">@Localizer["FirstName"]</label><br />
            <input type="text" asp-for="FirstName" />
            <span asp-validation-for="FirstName" /><br />

        </div>

        <div class="form-group>

            <label asp-for="LastName">@Localizer["LastName"]</label><br />
            <input type="text" asp-for="LastName" />
            <span asp-validation-for="LastName" /><br />

        </div>

        <div class="form-group>

            <label asp-for="Email">@Localizer["Email"]</label><br />
            <input type="text" asp-for="Email" />
            <span asp-validation-for="Email" /><br />

        </div>

        <div class="form-group>

            <label asp-for="Phone">@Localizer["Phone"]</label><br />
            <input type="text" asp-for="Phone" />
            <span asp-validation-for="Phone" /><br />

        </div>

        <div class="form-group>

            <label asp-for="PasswordString">@Localizer["Password"]</label><br />
            <input type="password" asp-for="PasswordString" />
            <span asp-validation-for="PasswordString" /><br />

        </div>

        <div class="form-group">
            <label asp-for="AccessToken">@Localizer["AccessToken"]</label><br />
            <input type="text" asp-for="AccessToken" />
            <span asp-validation-for="AccessToken" /><br />
        </div>


        <div class="form-group">
            <input type="submit" value="Register" class="btn btn-light">
        </div>

    </div>




</form>