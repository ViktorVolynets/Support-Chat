@model TechnicalSupport.Utils.AuthModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@using Microsoft.AspNetCore.Mvc.Localization;
@using TechnicalSupport.Utils;

@inject IViewLocalizer Localizer

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


<h2>Вход на сайт</h2>

<form asp-action="Login" asp-controller="Account" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div>
        <div class="form-group">
            <a href="Join">Create Account</a>
        </div>
        <div class="form-group">
            @{
                if (ViewBag.AuthResult.IncorrectData == true)
                {
                    <label style="color : red">@Localizer["Incorrect Data"]</label>
                    <br />
                }
            }
            <label asp-for="UserString">@Localizer["UserString"]</label><br />
            <input type="text" asp-for="UserString" />
            <span asp-validation-for="UserString" /><br />
        </div>
        <div class="form-group">
            @{
                if (ViewBag.AuthResult.IncorrectData == true)
                {
                    <label style="color : red">@Localizer["Incorrect Password"]</label>
                    <br />
                }

            }
            <label asp-for="Password">@Localizer["Password"]</label><br />
            <input asp-for="Password" />
            <span asp-validation-for="Password" class="text-danger" /><br />
        </div>
        <div class="form-group">
            <input type="submit" value="Войти" class="btn" />
        </div>
    </div>
</form>